<main>
    <!--This will print out a list populated with patients for a physio -->
    <div id="navBar">
        <img src="img/physit_logo.png">
    </div>

    <div id="wrapper">
        <div id="menu">
            <div id="navbar_title">
                <p class="navtext">Patient List</p>
            </div>
            <div id="log_out">
            <form action="/" method="GET">

                <button class="log_out" onclick="sign_out_function()">Log Out</button>

            </form>
            </div>
        </div>
    </div>
    <div id="title">

        <h2>Welcome, {{physiotherapist.firstName}} {{physiotherapist.lastName}}</h2>
    </div>
    <div id="listcontainer">
        <table id="patients">
            <tr>
                <th>First name</th>
                <th>Last name</th>
                <th>Phone Number</th>
                <th>Appointment Time</th>
            </tr>
            {{#each patients}}
            <form method="GET" action="/home">
                <tr>
                    <td>{{this.firstName}}</td>
                    <td>{{this.lastName}}</td>
                    <td>{{this.phoneNumber}}</td>
                    <td>{{this.appointmentTime}} - {{this.appointmentEndTime}}</td>
                    <td><button type="submit">View More</button></td>
                </tr>
            </form>
            {{/each}}
        </table>
    </div>
    </div>


</main>