                <th>Phone Number</th>
                <th>Appointment Time</th>
            </tr>
            {{#each patients}}
            <form name="patientData" method="GET" action="/home">
                <tr>
                    <input name="appointmentID" type="hidden" value="{{this.appointmentID}}"/>
                    <input name="patientID" type="hidden" value="{{this.patientID}}"/>
                    <td>{{this.firstName}}</td>
                    <td>{{this.lastName}}</td>
                    <td>{{this.phoneNumber}}</td>
                    <td>{{this.appointmentTime}} - {{this.appointmentEndTime}}</td>
                    <td><button type="submit">View More</button></td>
