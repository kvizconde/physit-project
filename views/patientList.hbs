<main class="home-container">
  {{>_patientHeader}}
  <div id="card-container">
    <form class="card-wrapper" method="GET" action="/home">
      {{#each patients}}
      <div class="card">
        <h1 class="time">{{ this.appointmentTime }} - {{ this.appointmentEndTime }}</h1>
        <h2 class="name">{{ this.firstName }} {{ this.lastName }}</h2>
        <p class="phone">{{ this.phoneNumber }}</p>
        <button type="submit" class="btn">View</button>
      </div>
      {{/each}}
    </form>
  </div>

  <div id="listcontainer">
        <table id="patients">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone Number</th>
                <th>Appointment Time</th>
            </tr>
            {{#each patients}}
            <form name="patientData" method="GET" action="/home">
                <tr>
                    <td>{{this.firstName}}</td>
                    <td>{{this.lastName}}</td>
                    <td>{{this.phoneNumber}}</td>
                    <td>{{this.appointmentTime}} - {{this.appointmentEndTime}}</td>
                    <td><button type="submit">View More</button></td>
                </tr>
            </form>
            {{/each}}
        </table>
    </div>
</main>
{{>_footer}}

